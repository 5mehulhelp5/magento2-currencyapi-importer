<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="currency" translate="label" type="text">
            <group id="webservicex"/>
            <group id="houseofapis_currencyapi" translate="label" type="text" sortOrder="35" showInDefault="1">
                <label>CurrencyApi.net</label>
                <field id="api_key" translate="label" type="obscure" sortOrder="10" showInDefault="1">
                    <label>API Key</label>
                    <config_path>currency/houseofapis_currencyapi/api_key</config_path>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <comment>Enter your API key from CurrencyApi.net.</comment>
                </field>
                <field id="timeout" translate="label" type="text" sortOrder="20" showInDefault="1">
                    <label>Connection Timeout in Seconds</label>
                    <validate>validate-zero-or-greater validate-number</validate>
                </field>
            </group>
        </section>
    </system>
</config>


